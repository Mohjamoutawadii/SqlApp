<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SqlApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.gallery.GalleryFragment"
            android:exported="false" />

        <activity
            android:name=".Login.SignupActivity"
            android:exported="false"
            android:theme="@style/Theme.SqlApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SqlApp.NoActionBar" />
        <activity
            android:name=".ui.produit.AddMachineActivity"
            android:exported="false"
            android:label="Ajouter Une Machine"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.produit.UpdateMachineActivity"
            android:exported="false"
            android:label="Modifier Une Machine"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.gallery.AddMarqueActivity"
            android:exported="false"
            android:label="Ajouter Une Marque"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.gallery.UpdateMarqueActivity"
            android:exported="false"
            android:label="Modifier Une Marque"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SqlApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>